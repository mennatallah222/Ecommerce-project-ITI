@using project01.Models
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json


@{
    var cartJson = Context.Request.HttpContext.Session.GetString("cart");
    var cartItems = !string.IsNullOrEmpty(cartJson) ? JsonConvert.DeserializeObject<List<Item>>(cartJson) : new List<Item>();
}

@if (cartItems.Count > 0)
{

    <h1>Your Cart</h1>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Product</th>
                <th>Product Price</th>
                <th>Quantity</th>
                <th>Total amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in cartItems)
            {
                <tr>
                    <td><img src="~/Images/@item.Product.ProductPicture" alt="@item.Product.Name" width="100" height="100" /></td>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                    <td>
                        <a href="@Url.Action("RemoveFromCart", "ShoppingCart", new { @id = item.Product.Id })" class="btn btn-outline-danger">Remove</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
    <br />
    <div>
        <a class="btn btn-dark text-center" asp-action="Index" asp-controller="Home">Continue Shopping</a>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-dark" href="@Url.Action("Index", "Checkout")">Procceed to checkout</a>
    }
    else
    {
        <p><a class="btn btn-dark mt-2 text-center" href="@Url.Action("Login", "Account")">log in</a>to complete your purchase</p>
    }

    }
    else
    {
    <div class="alert alert-danger" role="alert">
        Your cart is empty
    </div>
}