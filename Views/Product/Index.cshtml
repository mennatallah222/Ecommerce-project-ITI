@model List<Product>

<h1>Product List</h1>
<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    @if (product.ProductPicture != null && product.ProductPicture.Length > 0)
                    {
                        <img src="data:image/*;base64,@Convert.ToBase64String(product.ProductPicture)" class="card-img-top" alt="Product Image" style="max-width: 200px; max-height: 200px;" />
                    }
                    else
                    {
                        <div class="card-img-top default-image">Image is not Available</div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <td>
                        <li class="list-group-item">Price: $@product.Price</li></td>
                        <td>
                        <li class="list-group-item">Quantity: @product.Quantity</li></td>


                    </ul>
                    <div class="text-center mt-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-success">Edit</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger" data-toggle="modal" data-target="#confirmDeleteModal_@product.Id">Delete</a>


                        }
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-dark">read more</a>
                        
                    </div>
                </div>
            </div>


            <div class="modal fade" id="confirmDeleteModal_@product.Id" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this product?</p>
                        </div>
                        <div class="modal-footer">
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>



        }

    </div>
</form>
@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <a asp-action="Add" class="btn btn-outline-primary">Add new product</a>
    </div>
}

