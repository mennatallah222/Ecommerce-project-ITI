@model IEnumerable<UsersViewModel>

@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<a asp-action="Add" class="btn btn-outline-primary">Add New User</a>

<table class="table table-striped" mt-4>
    <thead>
        <tr class="bg-dark text-secondary">
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.UserEmail</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-outline-dark" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id">Manage Roles</a>
                    <a class="btn btn-outline-primary" asp-controller="Users" asp-action="Edit" asp-route-userId="@user.Id">Edit</a>
                    <form id="deleteForm" method="post" asp-controller="Users" asp-action="Delete" asp-route-userId="@user.Id" onsubmit="return confirm('Are you sure you want to delete this user?')">
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>