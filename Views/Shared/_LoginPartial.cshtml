@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

    <div class="row" style="position:relative; bottom:4px">
        @if (SignInManager.IsSignedIn(User))
        {
            @if (UserManager.GetUserAsync(User).Result.ProfilePicture is not null)
            {
                <li class="nav-item">
                    <img class=" avatar rounded-circle" alt="profile picture" src="data:image/*;base64, @(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePicture))" style="position: relative; left: 23px"/>
                </li>
            }


            <li>
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="position:relative; bottom:4px"> @User.Identity.Name</a>
            </li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </div>